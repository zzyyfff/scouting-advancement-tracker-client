<section id="{{merit_badge.id}}" class="merit_badge" data-id="{{merit_badge.id}}">
  <form id="badge-form-{{merit_badge.id}}" class="badge-form">
    <h3>
      {{merit_badge.name}}
    </h3>
    <p class="badge-completed">
      {{#if merit_badge.completed}}
        <strong>⭐️ Completed! ⭐️</strong>
      {{else}}
        In progress...
      {{/if}}
    </p>
    <p>&nbsp;</p>
    {{#if merit_badge.notes}}
      <p class="badge-notes">
        Notes: <br>{{merit_badge.notes}}
      </p>
    {{else}}
      <p class="badge-notes"></p>
    {{/if}}
  </form>
  <br>

  <button id="editMeritBadgeButton-{{merit_badge.id}}" class="editMeritBadgeButton btn btn-warning">Edit</button>
  <button id="deleteMeritBadgeButton-{{merit_badge.id}}" class="deleteMeritBadgeButton btn btn-warning">Remove</button>

</section>
